{
    "mode": "All",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Sql/servers/databases"
                },
                {
                    "allOf": [
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.Sql/servers/databases/sku.tier",
                                    "equals": "GeneralPurpose"
                                },
                                {
                                    "field": "Microsoft.Sql/servers/databases/sku.tier",
                                    "equals": "Hyperscale"
                                },
                                {
                                    "field": "Microsoft.Sql/servers/databases/sku.tier",
                                    "equals": "BusinessCritical"
                                },
                                {
                                    "field": "Microsoft.Sql/servers/databases/sku.tier",
                                    "equals": "Premium"
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "field": "Microsoft.Sql/servers/databases/sku.tier",
                                    "equals": "GeneralPurpose"
                                },
                                {
                                    "field": "Microsoft.Sql/servers/databases/sku.capacity",
                                    "lessOrEquals": 2
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "then": {
            "effect": "deny"
        }
    },
    "parameters": {}
}