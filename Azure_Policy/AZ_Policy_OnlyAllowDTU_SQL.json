{
    "properties": {
        "displayName": "Allow DTU SQL Databases Only",
        "policyType": "Custom",
        "mode": "All",
        "description": "Ensures that only DTU SQL databases are deployed in the subscription\nF-13819 Azure vCore SQL - prevent deployment in Dev/Test sub",
        "metadata": {
            "category": "SQL"
        },
        "parameters": {},
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Sql/servers/databases"
                    },
                    {
                        "field": "Microsoft.Sql/servers/databases/sku.tier",
                        "notEquals": "ElasticPool"
                    },
                    {
                        "field": "Microsoft.Sql/servers/databases/sku.family",
                        "notEquals": "vCore"
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}